%html
  %head
    %title Books Online Store
    = stylesheet_link_tag "application"
    = javascript_include_tag "application"
    = csrf_meta_tag

  %body{:class => controller.controller_name}
    #banner
      = image_tag("nestor.png")
      = @page_title || "Bookshelf"
    #columns
      #side
        -if @cart
          #cart= render @cart
        %ul
          %li= link_to 'Home', store_path
          %li= Time.now.strftime "It's %m/%d/%Y %I:%M%p"
      #main= yield
